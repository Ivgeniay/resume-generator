{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build CommonLib",
			"type": "shell",
			"command": "cd commonLib && npm ci && npm run build",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Start Backend Debug",
			"type": "shell",
			"command": "cd backend && npm run start:dev",
			"group": "build",
			"dependsOn": "Build CommonLib",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		}
	]
}
